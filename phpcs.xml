<?xml version="1.0"?>
<ruleset name="CakePHP Sentry">
    <config name="installed_paths" value="../../cakephp/cakephp-codesniffer"/>

    <file>config/</file>
    <file>src/</file>
    <file>tests/</file>

    <exclude-pattern>/tests/test_app/*</exclude-pattern>

    <rule ref="CakePHP"/>
</ruleset>
